//Make the track on the curve

//Get selected objects
string $sel[] = `ls -sl`;
//The faces of the track that need to be extruded on the curve
select -tgl Track.f[20] ;
select -tgl Track.f[26] ;
select -tgl Track.f[14] ;
select -tgl Track.f[38] ;
select -tgl Track.f[8] ;
select -tgl Track.f[2] ;
select -tgl Track.f[32] ;
//Extrude the faces on the curve and setting the divisions to 50 to make the track smoother
PolyExtrude;
setAttr polyExtrudeFace1.divisions 50;



//Make the track on a circle

//Making an oval shaped curve
curve -d 3 -p -2 0 0 -p -6 0 0 -p -11 0 0 -p -11 0 -11 -p -1 0 -11 -p 11 0 -11 -p 11 0 0 -p 7 0 0 -p -2 0 0 -k 0 -k 0 -k 0 -k 1 -k 2 -k 3 -k 4 -k 5 -k 6 -k 6 -k 6;
rename ovalTrack;
//Get selected objects
string $sel[] = `ls -sl`;
//select the curve
select ovalTrack;
//The faces of the track that need to be extruded on the curve
select -tgl Track.f[20];
select -tgl Track.f[26];
select -tgl Track.f[14];
select -tgl Track.f[38];
select -tgl Track.f[8];
select -tgl Track.f[2];
select -tgl Track.f[32];
//Extrude the faces on the curve and setting the divisions to 50 to make the track smoother
PolyExtrude;
setAttr polyExtrudeFace1.divisions 50;




// Define a procedure for "createCube"
global proc createCube() 
{
    // createCube
    global string $makeCube[]; // Access the global variable
    $makeCube = `polyCube`;
    scale 8 4 4;
    move 0 2 0;
    rename body;
    makeIdentity -apply true -t 1 -r 1 -s 1 -n 0 -pn 1;
    polyCylinder;
    move 3 6 0;
    rotate 0 0 50;
    scale 1 0.3 1;
    rename Steer;
}

// Define a procedure for "createWheel"
global proc createWheel() 
{
    global string $makeWheel[]; // Access the global variable
    $makeWheel = `polyCylinder`;
    rotate 90 0 0;
    move 2.5 0 2;
    rename FR;
    duplicate;
    move -2.5 0 2;
    rename BR;
    duplicate;
    move -2.5 0 -2;
    rename BL;
    duplicate;
    move 2.5 0 -2;
    rename FL;
    select Steer BL BR FL FR body;
    parent;
    select FL;
    group -n "Left";
    select FR;
    group -n "Right";
}

// Define a procedure for "createCube"
global proc createTransforms() 
{
    // createCube
    global string $makeTransforms[]; // Access the global variable
select body;
move 1 -1.75 -1;
scale 0.06 0.06 0.06;
}


// Build the window
window -title "My UI" -widthHeight 200 100 myUI;
columnLayout -adjustableColumn true -rowSpacing 10;
    button -label "Body" -command "createCube()";
    button -label "Wheels" -command "createWheel()";
    button -label "Transforms" -command "createTransforms()";
// Show the window
showWindow myUI;
