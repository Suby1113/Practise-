//VERSION 4



// Define a procedure for "createCube"
global proc createCube() 
{
    // createCube
    global string $makeCube[]; // Access the global variable
    $makeCube = `polyCube`;
    scale 8 4 4;
    move 0 2 0;
    rename body;
    makeIdentity -apply true -t 1 -r 1 -s 1 -n 0 -pn 1;
    polyCylinder;
    move 3 6 0;
    rotate 0 0 50;
    scale 1 0.3 1;
    rename Steer;

    $makeWheel = `polyCylinder`;
    rotate 90 0 0;
    move 2.5 0 2;
    rename FR;
    duplicate;
    move -2.5 0 2;
    rename BR;
    duplicate;
    move -2.5 0 -2;
    rename BL;
    duplicate;
    move 2.5 0 -2;
    rename FL;
    select Steer BL BR FL FR body;
    parent;
    select FL;
    group -n "Left";
    select FR;
    group -n "Right";

    select body;
    move 1 -1.715 0;
    scale 0.06 0.06 0.06;
    
    select body;
    expression -s "FR.rotateZ = frame * body.translateX * 500;";    
    expression -s "FL.rotateZ = frame * body.translateX * 500;";
    expression -s "BR.rotateZ = frame * body.translateX * 500;";
    expression -s "BL.rotateZ = frame * body.translateX * 500;";
    expression -s "Right.rotateY = Steer.rotateY;";
    expression -s "Left.rotateY = Steer.rotateY;";
    expression -s "Right.rotateY = body.rotateY;";
    expression -s "Left.rotateY = body.rotateY;";

}


global proc Red()
{
    duplicate body;
    rename redBody;
    shadingNode -asShader lambert -name "red";
    sets -renderable true -noSurfaceShader true -empty -name "redSG";
    connectAttr -f "red.outColor" "redSG.surfaceShader";
    setAttr "red.color" -type double3 1 0 0;
    select redBody;
    hyperShade -assign "red";
    move 1 -1.715 1;
    select body;
}

global proc Blue()
{
    duplicate body;
    rename blueBody;
    shadingNode -asShader lambert -name "blue";
    sets -renderable true -noSurfaceShader true -empty -name "blueSG";
    connectAttr -f "blue.outColor" "blueSG.surfaceShader";
    setAttr "blue.color" -type double3 0 0.1968 0.9338;
    select blueBody;
    hyperShade -assign "blue";
    move 1 -1.715 -1;
    select body;
}

global proc createTrack1() 
{
    //Make the track on a circle

    //Making an oval shaped curve
    curve -d 3 -p -2 0 0 -p -6 0 0 -p -11 0 0 -p -11 0 -11 -p -1 0 -11 -p 11 0 -11 -p 11 0 0 -p 7 0 0 -p -2 0 0 -k 0 -k 0 -k 0 -k 1 -k 2 -k 3 -k 4 -k 5 -k 6 -k 6 -k 6;
    rename ovalTrack;
    //Get selected objects
    string $sel[] = `ls -sl`;
    //select the curve
    select ovalTrack;
    //The faces of the track that need to be extruded on the curve
    select -tgl Track.f[20];
    select -tgl Track.f[26];
    select -tgl Track.f[14];
    select -tgl Track.f[38];
    select -tgl Track.f[8];
    select -tgl Track.f[2];
    select -tgl Track.f[32];
    //Extrude the faces on the curve and setting the divisions to 50 to make the track smoother
    PolyExtrude;
    setAttr polyExtrudeFace1.divisions 50;
    select ovalTrack;
    move 0 0.042 0;
    
    duplicate ovalTrack;
    rename driftCurve1;
    move -r 0 0.1 -0.121;
    scale 0.984 1 0.975;
    
    duplicate ovalTrack;
    select ovalTrack1;
    rename driftCurve2;
    move -r 0 0.25 0.174;
    scale 1.011 1 1.030;
    
    duplicate driftCurve1;
    select driftCurve3;
    move 0 0.142 -1.132;
    scale 0.897 1 0.8;
    
    duplicate driftCurve2;
    select driftCurve4;
    move 0 0.292 -0.823;
    scale 0.918 1 0.839;
    
    duplicate driftCurve1;
    select driftCurve5;
    move 0 0.142 0.865;
    scale 1.079 1 1.149;
    
    duplicate driftCurve2;
    select driftCurve6;
    move 0 0.292 1.135;
    scale 1.1 1 1.2;
}

global proc customTrack()
{
    //Make the track on the curve

    //Get selected objects
    string $sel[] = `ls -sl`;
    rename driveCurve;
    duplicate;
    rename customCurve;
    //The faces of the track that need to be extruded on the curve
    select -tgl Track.f[20] ;
    select -tgl Track.f[26] ;
    select -tgl Track.f[14] ;
    select -tgl Track.f[38] ;
    select -tgl Track.f[8] ;
    select -tgl Track.f[2] ;
    select -tgl Track.f[32] ;
    //Extrude the faces on the curve and setting the divisions to 50 to make the track smoother
    PolyExtrude;
    setAttr polyExtrudeFace1.divisions 50;
    
    select -r driveCurve;
    move -r 0 0.25 0;
    
    //select body driveCurve;
   // pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;


}

global proc motionPath()
{
    //Get selected objects
    string $sel1[] = `ls -sl`;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;

}

global proc motionPathCars()
{
    select blueBody driftCurve4;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;
    
    select body driftCurve2;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;
    
    select redBody driftCurve6;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;
}

// Build the window

    if (`window -exists myUI`)
        deleteUI myUI;

    window -title "Track Racer UI" -widthHeight 200 100 myUI;
    columnLayout -adjustableColumn true -rowSpacing 10;

    button -label "Create Oval Track" -command "createTrack1()";
    button -label "Create Custom Track" -command "customTrack()";
    button -label "Create Car" -command "createCube()";
    button -label "Make Car Red" -command "Red()";
    button -label "Make Car Blue" -command "Blue()";
    button -label "Attach to curve" -command "motionPath()";
    button -label "Attach all cars to curve" -command "motionPathCars()";

    showWindow myUI;








