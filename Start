// Define a procedure for "createCube"
global proc createCube() 
{
    // createCube
    global string $makeCube[]; // Access the global variable
    $makeCube = `polyCube`;
    scale 8 4 4;
    move 0 2 0;
    rename body;
    makeIdentity -apply true -t 1 -r 1 -s 1 -n 0 -pn 1;
    polyCylinder;
    move 3 6 0;
    rotate 0 0 50;
    scale 1 0.3 1;
    rename Steer;

    $makeWheel = `polyCylinder`;
    rotate 90 0 0;
    move 2.5 0 2;
    rename FR;
    duplicate;
    move -2.5 0 2;
    rename BR;
    duplicate;
    move -2.5 0 -2;
    rename BL;
    duplicate;
    move 2.5 0 -2;
    rename FL;
    select Steer BL BR FL FR body;
    parent;
    select FL;
    group -n "Left";
    select FR;
    group -n "Right";

    select body;
    move 1 -1.715 0;
    scale 0.06 0.06 0.06;
    rotate 0 180 0;
    
    select body;
    expression -s "FR.rotateZ = frame * body.translateX * 500;";    
    expression -s "FL.rotateZ = frame * body.translateX * 500;";
    expression -s "BR.rotateZ = frame * body.translateX * 500;";
    expression -s "BL.rotateZ = frame * body.translateX * 500;";
    expression -s "Right.rotateY = Steer.rotateY;";
    expression -s "Left.rotateY = Steer.rotateY;";
    //expression -s "Right.rotateY = body.rotateY;";
    //expression -s "Left.rotateY = body.rotateY;";
    expression -s "Steer.rotateY = body.rotateY;";

}


