if (`window -exists myUI`) 
{
    deleteUI -window myUI;
}

global proc createControl()
{
    circle -c 0 0 0 -nr 0 1 0 -sw 360 -r 1 -d 3 -ut 0 -tol 0.01 -s 8 -ch 1; objectMoveCommand;
    rename "control";
    addAttr -ln "objScale"  -at double  -dv 0 |control;
    setAttr -e-keyable true |control.objScale;
    select -d control;
}

global proc createGroup()
{
    string $sel2[] = `ls -sl`;
    string $grp1 = `group $sel2`;
    connectAttr control.objScale ($grp1 + ".scaleX");
    connectAttr control.objScale ($grp1 + ".scaleY");
    connectAttr control.objScale ($grp1 + ".scaleZ");
}

window -title "My UI" -widthHeight 200 100 myUI;
columnLayout -adjustableColumn true -rowSpacing 10;
    button -label "Create Control" -command "createControl()";
    button -label "Create Group" -command "createGroup()";
    
showWindow myUI;
