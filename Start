//Task 2
// Get selected objects
string $selection[] = `ls -sl`;

// For each object, rotate it a random amount
for ($each in $selection)
{
    int $X = `rand 0 360`;
    int $Y = `rand 0 360`;
    int $Z = `rand 0 360`;
    rotate $X $Y $Z $each;
}

