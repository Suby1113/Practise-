    move 0 0.042 0;
    
    duplicate ovalTrack;
    rename driftCurve1;
    move -r 0 0.1 -0.121;
    scale 0.984 1 0.975;
    
    duplicate ovalTrack;
    select ovalTrack1;
    rename driftCurve2;
    move -r 0 0.25 0.174;
    scale 1.011 1 1.030;
    
    duplicate driftCurve1;
    select driftCurve3;
    move 0 0.142 -1.132;
    scale 0.897 1 0.8;
    
    duplicate driftCurve2;
    select driftCurve4;
    move 0 0.292 -0.823;
    scale 0.918 1 0.839;
    
    duplicate driftCurve1;
    select driftCurve5;
    move 0 0.142 0.865;
    scale 1.079 1 1.149;
    
    duplicate driftCurve2;
    select driftCurve6;
    move 0 0.292 1.135;
    scale 1.1 1 1.2;
}

global proc customTrack()
{
    //Make the track on the curve

    //Get selected objects
    string $sel[] = `ls -sl`;
    rename driveCurve;
    duplicate;
    rename customCurve;
    //The faces of the track that need to be extruded on the curve
    select -tgl Track.f[20] ;
    select -tgl Track.f[26] ;
    select -tgl Track.f[14] ;
    select -tgl Track.f[38] ;
    select -tgl Track.f[8] ;
    select -tgl Track.f[2] ;
    select -tgl Track.f[32] ;
    //Extrude the faces on the curve and setting the divisions to 50 to make the track smoother
    PolyExtrude;
    setAttr polyExtrudeFace1.divisions 50;
    
    select -r driveCurve;
    move -r 0 0.25 0;
    
    //select body driveCurve;
   // pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;


}

global proc motionPath()
{
    select body driveCurve;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;

}

global proc motionPathCars()
{
    select blueBody driftCurve4;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;
    
    select body driftCurve2;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;
    
    select redBody driftCurve6;
    pathAnimation -fractionMode true -follow true -followAxis x -upAxis y -worldUpType "vector" -worldUpVector 0 1 0 -inverseUp false -inverseFront false -bank false -startTimeU `playbackOptions -query -minTime` -endTimeU  `playbackOptions -query -maxTime`;

    
    //play;
}

// Build the window

    if (`window -exists myUI`)
        deleteUI myUI;

    window -title "Track Racer UI" -widthHeight 200 100 myUI;
    columnLayout -adjustableColumn true -rowSpacing 10;

    button -label "Create Oval Track" -command "createTrack1()";
    button -label "Create Custom Track" -command "customTrack()";
    button -label "Create Car" -command "createCube()";
    button -label "Make Car Red" -command "Red()";
    button -label "Make Car Blue" -command "Blue()";
    button -label "Attach default car to custom curve" -command "motionPath()";
    button -label "Attach all cars to curve" -command "motionPathCars()";

    showWindow myUI;
