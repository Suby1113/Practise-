// Define a procedure for "createCube"
global proc createCube() 
{
    // createCube
    global string $makeCube[]; // Access the global variable
    $makeCube = `polyCube`;
    scale 8 4 4;
    move 0 2 0;
    rename body;
    makeIdentity -apply true -t 1 -r 1 -s 1 -n 0 -pn 1;
    polyCylinder;
    move 3 6 0;
    rotate 0 0 50;
    scale 1 0.3 1;
    rename Steer;

    $makeWheel = `polyCylinder`;
    rotate 90 0 0;
    move 2.5 0 2;
    rename FR;
    duplicate;
    move -2.5 0 2;
    rename BR;
    duplicate;
    move -2.5 0 -2;
    rename BL;
    duplicate;
    move 2.5 0 -2;
    rename FL;
    select Steer BL BR FL FR body;
    parent;
    select FL;
    group -n "Left";
    select FR;
    group -n "Right";

    select body;
    move 1 -1.715 0;
    scale 0.06 0.06 0.06;
}

global proc Red()
{
    duplicate body;
    rename redBody;
    shadingNode -asShader lambert -name "red";
    sets -renderable true -noSurfaceShader true -empty -name "redSG";
    connectAttr -f "red.outColor" "redSG.surfaceShader";
    setAttr "red.color" -type double3 1 0 0;
    select redBody;
    hyperShade -assign "red";
    move 1 -1.715 1;
}

global proc Blue()
{
    duplicate body;
    rename blueBody;
    shadingNode -asShader lambert -name "blue";
    sets -renderable true -noSurfaceShader true -empty -name "blueSG";
    connectAttr -f "blue.outColor" "blueSG.surfaceShader";
    setAttr "blue.color" -type double3 0 0.1968 0.9338;
    select blueBody;
    hyperShade -assign "blue";
    move 1 -1.715 -1;
}

global proc createTrack1() 
{
    //Make the track on a circle

    //Making an oval shaped curve
    curve -d 3 -p -2 0 0 -p -6 0 0 -p -11 0 0 -p -11 0 -11 -p -1 0 -11 -p 11 0 -11 -p 11 0 0 -p 7 0 0 -p -2 0 0 -k 0 -k 0 -k 0 -k 1 -k 2 -k 3 -k 4 -k 5 -k 6 -k 6 -k 6;
    rename ovalTrack;
    //Get selected objects
    string $sel[] = `ls -sl`;
    //select the curve
    select ovalTrack;
    //The faces of the track that need to be extruded on the curve
    select -tgl Track.f[20];
    select -tgl Track.f[26];
    select -tgl Track.f[14];
    select -tgl Track.f[38];
    select -tgl Track.f[8];
    select -tgl Track.f[2];
    select -tgl Track.f[32];
    //Extrude the faces on the curve and setting the divisions to 50 to make the track smoother
    PolyExtrude;
    setAttr polyExtrudeFace1.divisions 50;
    select ovalTrack;
    move 0 0.042 0;
    
    duplicate ovalTrack;
    rename driftCurve1;
    move -r 0 0.1 -0.121;
    scale 0.984 1 0.975;
    
    duplicate ovalTrack;
    select ovalTrack1;
    rename driftCurve2;
    move -r 0 0.1 0.174;
    scale 1.011 1 1.030;
}

